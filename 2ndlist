<script>
  let cart = [];
  let total = 0;

  function addToCart(name, price) {
    cart.push({name, price});
    total += price;
    
    // Logic to show wishlist button after choosing a product
    if(name.includes('Coconut')) document.getElementById('wish-Coconut').style.display = 'block';
    if(name.includes('Groundnut')) document.getElementById('wish-Groundnut').style.display = 'block';
    if(name.includes('Sesame')) document.getElementById('wish-Sesame').style.display = 'block';
    
    renderCart();
  }

  function renderCart() {
    const display = document.getElementById('cart-display');
    const totalArea = document.getElementById('total-area');
    const details = document.getElementById('customer-details');

    if (cart.length > 0) {
      display.innerHTML = cart.map(item => `
        <div class="cart-item">
          <span>${item.name}</span>
          <span>‚Çπ${item.price}</span>
        </div>
      `).join('');
      totalArea.innerHTML = `Total Amount: ‚Çπ${total}`;
      details.style.display = 'block';
    }
  }

  function confirmAndSend() {
    const name = document.getElementById('cust-name').value;
    const address = document.getElementById('cust-address').value;

    if (!name || !address) {
      alert("Please enter your name and address for delivery!");
      return;
    }

    // Creating the "Complete Customer List" for the Seller
    let message = `*NEW ORDER CONFIRMED*%0a`;
    message += `--------------------------%0a`;
    message += `*Customer:* ${name}%0a`;
    message += `*Address:* ${address}%0a`;
    message += `--------------------------%0a`;
    message += `*Items Ordered:*%0a`;
    
    cart.forEach((item, index) => {
      message += `${index + 1}. ${item.name} - ‚Çπ${item.price}%0a`;
    });

    message += `--------------------------%0a`;
    message += `*GRAND TOTAL: ‚Çπ${total}*%0a`;
    message += `--------------------------%0a`;
    message += `Please confirm availability and share payment link.`;

    // Opens WhatsApp with the structured list
    window.open(`https://wa.me/919392331316?text=${message}`, '_blank');
  }
</script>

