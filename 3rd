<script>
  let cart = [];
  let totalAmount = 0;

  function addToCart(productName, price, id) {
    // 1. Add item to cart array
    cart.push({ name: productName, price: price });
    totalAmount += price;

    // 2. Show the wishlist option for this specific item
    document.getElementById('wish-' + id).style.display = 'block';

    // 3. Update the UI
    updateCartUI();
    
    // 4. Scroll to checkout section
    document.getElementById('checkout-area').style.display = 'block';
  }

  function updateCartUI() {
    const listContainer = document.getElementById('cart-items-list');
    const totalDisplay = document.getElementById('grand-total');

    listContainer.innerHTML = cart.map((item, index) => `
      <div class="cart-item">
        <span>${index + 1}. ${item.name}</span>
        <span>‚Çπ${item.price}</span>
      </div>
    `).join('');

    totalDisplay.innerHTML = `Grand Total: ‚Çπ${totalAmount}`;
  }

  function generateWhatsAppOrder() {
    const custName = document.getElementById('name').value;
    const custAddress = document.getElementById('address').value;

    if (!custName || !custAddress) {
      alert("Please provide your name and address for delivery.");
      return;
    }

    // Build the structured list for the seller
    let msg = `*KVJ OILS - NEW ORDER*%0a`;
    msg += `--------------------------%0a`;
    msg += `*CUSTOMER DETAILS*%0a`;
    msg += `Name: ${custName}%0a`;
    msg += `Address: ${custAddress}%0a`;
    msg += `--------------------------%0a`;
    msg += `*ORDERED ITEMS*%0a`;
    
    cart.forEach((item, i) => {
      msg += `${i + 1}. ${item.name} - ‚Çπ${item.price}%0a`;
    });

    msg += `--------------------------%0a`;
    msg += `*TOTAL BILL: ‚Çπ${totalAmount}*%0a`;
    msg += `--------------------------%0a`;
    msg += `Please confirm my order and share payment link.`;

    // WhatsApp Redirect
    const whatsappLink = `https://wa.me/919392331316?text=${msg}`;
    window.open(whatsappLink, '_blank');
  }
</script>

